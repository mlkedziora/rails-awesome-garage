<header class="l-header" id="navbar">
  <div class="l-header__inner">
    <!-- Logo and Title -->
    <div class="l-header__brand">
      <a href="<%= root_path %>" class="l-header__link">
        <%= image_tag "logo.png", alt: "Logo", class: "l-header__logo" %>
        <span class="l-header__title">Awesome Garage</span>
      </a>
    </div>

    <!-- Navigation Links -->
    <nav class="l-header__nav">
      <ul class="l-header__ul">
        <li><a href="<%= cars_path %>" data-list="1">Home</a></li>
        <li><a href="<%= favourites_path %>" data-list="2">My Garage</a></li>
        <li><a href="#contact" data-list="3">Contact</a></li>
      </ul>
    </nav>

    <!-- Sound Button -->
    <div class="l-header__sound">
      <button class="l-header__sound-button" id="sound-button">
        <span>Sound: ON</span>
      </button>
    </div>
  </div>
</header>
